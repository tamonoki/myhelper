<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @order.user_id %>
</p>

<p>
  <strong>Images:</strong>
  <%= @order.images %>
</p>

<p>
	<strong>List</strong>
	: num(<%= @order.images.length %>)
	<% @order.images.each do |image| %>
		<ul>
			<li>
				<%= check_box_tag 'selectfiles[]', image.file.identifier %>
				<%= image.file.identifier %>
			</li>
			<li><%= image.url %></li>
			<li><%= image.identifier %></li>
			<li><%= image.size %></li>
			<li><%= image.length %></li>
			<li><%= image.current_path %></li>
			<li><%= image.class %></li>
			<li><%= image.methods %></li>
		</ul>
	<% end %>
</p>

<p>
  <strong>Images.file:</strong>
  <%= @order.images[0] %>
  <p><%= image_path_from_dir(@order.images[0].url, 'modified') %></p>
  <%= image_tag(image_path_from_dir(@order.images[0], 'modified')) %>
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
